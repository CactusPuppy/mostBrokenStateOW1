import "../main.ostw";

rule: "[heroes/moira.ostw] Make Moira biotic orb healing better"
Event.OnHealingTaken
if (Healer().effectiveHero == Hero.Moira)
if (EventAbility() == Button.Ability2)
{
  Heal(Healee(), Healer(), 10 / 65 * EventHealing());
}

